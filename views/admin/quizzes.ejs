<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Manage Quizzes</h2>
  <a href="/admin/quizzes/create" class="btn btn-primary">Create New Quiz</a>
</div>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Questions</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (quizzes.length > 0) { %>
            <% quizzes.forEach(quiz => { %>
              <tr>
                <td><%= quiz.title %></td>
                <td><%= quiz.description %></td>
                <td><span class="badge bg-secondary"><%= quiz.questions.length %></span></td>
                <td>
                  <a href="/admin/quiz/<%= quiz._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                  <form action="/admin/quiz/<%= quiz._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center">No quizzes found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
