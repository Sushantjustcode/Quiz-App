<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card score-card mb-4">
      <div class="card-body">
        <h2 class="card-title">Quiz Completed!</h2>
        <p class="text-muted"><%= quiz.title %></p>
        
        <div class="my-4">
          <div class="score-display">
            <%= score %> / <%= totalQuestions %>
          </div>
          <p class="lead">
            You answered <%= correctCount %> correctly out of <%= totalQuestions %> questions.
          </p>
        </div>

        <a href="/" class="btn btn-primary">Back to Home</a>
      </div>
    </div>

    <h4 class="mb-3">Detailed Results</h4>
    
    <% results.forEach((result, index) => { %>
      <div class="card mb-3 <%= result.isCorrect ? 'border-success' : 'border-danger' %>" style="border-width: 1px;">
        <div class="card-body">
          <h5 class="card-title d-flex justify-content-between">
            Question <%= index + 1 %>
            <% if (result.isCorrect) { %>
              <span class="badge bg-success">Correct</span>
            <% } else { %>
              <span class="badge bg-danger">Incorrect</span>
            <% } %>
          </h5>
          <p class="card-text"><%= result.questionText %></p>
          
          <ul class="list-group list-group-flush">
            <% result.options.forEach((option, optIndex) => { %>
              <% 
                let itemClass = '';
                if (optIndex === result.correctAnswerIndex) itemClass = 'list-group-item-success';
                else if (optIndex === result.submittedAnswerIndex && !result.isCorrect) itemClass = 'list-group-item-danger';
              %>
              <li class="list-group-item <%= itemClass %>">
                <%= option %>
                <% if (optIndex === result.correctAnswerIndex) { %>
                  <span class="float-end fw-bold text-success">&#10004;</span>
                <% } %>
                <% if (optIndex === result.submittedAnswerIndex && !result.isCorrect) { %>
                  <span class="float-end fw-bold text-danger">&#10008;</span>
                <% } %>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    <% }) %>
    
  </div>
</div>
